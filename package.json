{
  "name": "Nintenleakapp",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.projex.nintenleakapp",
    "productName": "Nintenleakapp",
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "linux": {
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "H3ristos",
      "repo": "Nintenleak-App-1.0"
    }
  },
  "dependencies": {
    "electron": "^31.0.2",
    "electron-updater": "^4.6.5"
  }
}
